      // ?¥Êñ∞Ë™ûË??ßÂÆπ
      function updateLanguage() {
        const texts = translations[currentLang];

        Object.keys(texts).forEach((key) => {
          const element = document.getElementById(key);
          if (element) {
            if (key === "profileBio") {
              element.innerHTML = texts[key];
